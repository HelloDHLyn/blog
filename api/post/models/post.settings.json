{
  "connection": "default",
  "collectionName": "posts",
  "info": {
    "name": "Post"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "body": {
      "type": "text"
    },
    "thumbnail_url": {
      "type": "string"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "draft",
        "published",
        "archived"
      ],
      "default": "draft",
      "required": true
    },
    "tags": {
      "type": "component",
      "repeatable": true,
      "component": "tags.post-tags"
    }
  }
}
